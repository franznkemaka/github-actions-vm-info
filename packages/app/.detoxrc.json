{
    "testRunner": "jest",
    "runnerConfig": "e2e/config.json",
    "apps": {
        "ios": {
            "type": "ios.app",
            "binaryPath": "SPECIFY_PATH_TO_YOUR_APP_BINARY"
        },
        "android": {
            "type": "android.apk",
            "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
            "build": "cd android && gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd .."
        }
    },
    "devices": {
        "simulator": {
            "type": "ios.simulator",
            "device": {
                "type": "iPhone 11"
            }
        },
        "emulator": {
            "type": "android.emulator",
            "device": {
                "avdName": "Pixel_2_API_30"
            }
        },
        "emulator.ci": {
            "type": "android.emulator",
            "device": {
                "avdName": "Nexus 5X"
            }
        }
    },
    "configurations": {
        "ios": {
            "device": "simulator",
            "app": "ios"
        },
        "android": {
            "device": "emulator",
            "app": "android"
        },
        "android.ci": {
            "device": "emulator.ci",
            "app": "android"
        }
    }
}
